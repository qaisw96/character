<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layouts/head.ejs')  %> 
</head>
<body>
    <header>
        <%- include('../layouts/header.ejs')  %> 

    </header>
    <main>
        <% characters.forEach(character => { %>
            <section>

                <p>
                    <%= character.name %> 
                </p>
                <p>
                    <%= character.house %> 
                </p>
                <p>
                    <%= character.patronus %> 
                </p>
                <p>
                    <%= character.is_alive %> 
                </p>
                
                <a href='/character/<%= character.id %>'>view details</a>
            </section>
      <%  }) %> 
    </main>
</body>
</html>