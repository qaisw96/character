<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layouts/head.ejs')  %> 
</head>
<body>
    <header>
        <%- include('../layouts/header.ejs')  %> 

    </header>
    <main>
        <% character.forEach(character => { %>
            <section>

                <p>
                    <%= character.name %> 
                </p>
                <p>
                    <%= character.house %> 
                </p>
                <p>
                    <%= character.patronus %> 
                </p>
                <p>
                    <%= character.is_alive %> 
                </p>
                <form action="/character/<%= character.id %>?_method=DELETE " method="POST">
                    <input type="submit" value="delete">
                </form>
                <button id="btn">update</button>
                <form action="/character/<%= character.id %>?_method=PUT" method="POST" id="updateForm">
                    <input type="text" name="name" value="<%= character.name %> ">
                    <input type="text" name="house" value="<%= character.house %> ">
                    <input type="text" name="patronus" value="<%= character.patronus %> ">
                    <select name="status" id="">
                        <% if(character.is_alive) { %>
                            <option value="true">alive</option>
                            <option value="false">dead</option>
                            <%  } else { %>
                                <option value="false">dead</option>
                                <option value="true">alive</option>
                     <% }  %> 
                    </select>
                    <input type="submit" value="edit">
                </form>
            </section>
      <%  }) %> 
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>